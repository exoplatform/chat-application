<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <artifactId>addons-parent-pom</artifactId>
    <groupId>org.exoplatform.addons</groupId>
    <version>16-M01</version>
    <relativePath/>
  </parent>
  <groupId>org.exoplatform.addons.chat</groupId>
  <artifactId>chat-application</artifactId>
  <version>3.4.x-SNAPSHOT</version>
  <packaging>pom</packaging>
  <name>eXo Add-on:: Chat Application / Server</name>
  <description>Chat application and server developed with Juzu and MongoDB</description>
  <modules>
    <module>common</module>
    <module>server-embedded</module>
    <module>server-standalone</module>
    <module>application</module>
    <module>services</module>
    <module>extension</module>
    <module>packaging</module>
  </modules>
  <scm>
    <connection>scm:git:git://github.com/exoplatform/chat-application.git</connection>
    <developerConnection>scm:git:ssh://git@github.com/exoplatform/chat-application.git</developerConnection>
    <url>https://github.com/exoplatform/chat-application</url>
    <tag>HEAD</tag>
  </scm>
  <properties>
    <!-- 3rd party libraries versions -->
    <org.exoplatform.gatein.portal.version>6.4.0-20220616</org.exoplatform.gatein.portal.version>
    <org.exoplatform.social.version>6.4.0-20220616</org.exoplatform.social.version>
    <addon.exo.ecms.version>6.4.0-20220616</addon.exo.ecms.version>
    <addon.exo.notes.version>1.2.0-20220616</addon.exo.notes.version>
  	<org.juzu.version>1.2.0</org.juzu.version>

    <!-- TODO check dependencies from parent pom -->
    <commons-lang3.version>3.2</commons-lang3.version>
    <commons-codec.version>1.4</commons-codec.version>
    <de.flapdoodle.embed.mongo.version>2.0.3</de.flapdoodle.embed.mongo.version>
    <commons-compress.version>1.5</commons-compress.version>
    <javax.enterprise.cdi.version>1.0-SP4</javax.enterprise.cdi.version>
    <mongodb-java-driver.version>3.5.0</mongodb-java-driver.version>
    <com.google.inject.guice.version>3.0</com.google.inject.guice.version>
    <aopalliance.version>1.0</aopalliance.version>
    <com.google.json-simple.version>1.1.1</com.google.json-simple.version>

    <!-- The apache tomcat version to bundle -->
    <org.apache.tomcat.version>8.5.65</org.apache.tomcat.version>
    <quartz.version>2.2.2</quartz.version>
    <org.slf4j.version>1.7.7</org.slf4j.version>

    <!-- **************************************** -->
    <!-- Jenkins Settings -->
    <jenkins.job.name>chat-application-develop-ci</jenkins.job.name>
    <!-- **************************************** -->
  
    <!-- Sonar properties -->
    <sonar.organization>exoplatform</sonar.organization>
  </properties>
  <dependencyManagement>
