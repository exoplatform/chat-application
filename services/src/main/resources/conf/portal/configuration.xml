<configuration 
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.exoplatform.org/xml/ns/kernel_1_3.xsd http://www.exoplatform.org/xml/ns/kernel_1_3.xsd"
  xmlns="http://www.exoplatform.org/xml/ns/kernel_1_3.xsd">

    <component profiles="ecms">
        <type>org.exoplatform.chat.service.DocumentService</type>
        <init-params>
          <value-param>
            <name>upload.limit</name>
            <value>${exo.chat.upload.limit:100}</value>
          </value-param>
        </init-params>
    </component>
    <component>
        <key>QuickCreateChatDiscussionFeatureProperties</key>
        <type>org.exoplatform.container.ExtendedPropertyConfigurator</type>
        <init-params>
            <properties-param>
                <name>QuickCreateChatDiscussionFeatureProperties</name>
                <description>Quick Create Chat Discussion Feature enablement flag</description>
                <property name="exo.feature.quickCreateChatDiscussion.enabled" value="${exo.feature.quickCreateChatDiscussion.enabled:false}"/>
            </properties-param>
        </init-params>
    </component>

    <external-component-plugins>
        <target-component>org.exoplatform.services.resources.ResourceBundleService</target-component>
        <component-plugin>
        <name>Commons UI Component Resource Bundle</name>
        <set-method>addResourceBundle</set-method>
        <type>org.exoplatform.services.resources.impl.BaseResourceBundlePlugin</type>
        <init-params>
            <values-param>
            <name>classpath.resources</name>
            <description>The resources that start with the following package name should be load from file system</description>
            <value>locale.portlet.chat.Resource</value>          
            </values-param>
            <values-param>
            <name>portal.resource.names</name>
            <description>The properties files of the portal , those file will be merged into one ResoruceBundle properties </description>
            <value>locale.portlet.chat.Resource</value>
            </values-param>
        </init-params>
        </component-plugin>
    </external-component-plugins>

</configuration>
