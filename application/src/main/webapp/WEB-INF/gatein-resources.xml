<gatein-resources xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://www.exoplatform.org/xml/ns/gatein_resources_1_4 http://www.exoplatform.org/xml/ns/gatein_resources_1_4"
                  xmlns="http://www.exoplatform.org/xml/ns/gatein_resources_1_4">

    <portlet-skin>
        <application-name>chat</application-name>
        <portlet-name>ChatApplication</portlet-name>
        <skin-name>Enterprise</skin-name>
        <css-path>/css/main.css</css-path>
    </portlet-skin>
    <portlet-skin>
        <application-name>chat</application-name>
        <portlet-name>ChatNotificationApplication</portlet-name>
        <skin-name>Enterprise</skin-name>
        <css-path>/css/main.css</css-path>
    </portlet-skin>
    <portlet-skin>
        <application-name>chat</application-name>
        <portlet-name>ChatButtonApplication</portlet-name>
        <skin-name>Enterprise</skin-name>
        <css-path>/css/main.css</css-path>
    </portlet-skin>
    <portlet>
        <name>ChatApplication</name>
        <module>
            <depends>
                <module>chatBundle</module>
            </depends>
            <depends>
                <module>commonVueComponents</module>
            </depends>
        </module>
    </portlet>

    <portlet>
        <name>ChatNotificationApplication</name>
        <module>
            <depends>
                <module>chatBundle</module>
            </depends>
            <depends>
                <module>commonVueComponents</module>
            </depends>
        </module>
    </portlet>

    <portlet>
        <name>ChatButtonApplication</name>
        <module>
            <depends>
                <module>chatButtonBundle</module>
            </depends>
            <depends>
                <module>commonVueComponents</module>
            </depends>
        </module>
    </portlet>

    <module>
        <name>chatBundle</name>
        <script>
            <minify>false</minify>
            <path>/js/chat.bundle.js</path>
        </script>
        <depends>
            <module>vue</module>
        </depends>
        <depends>
            <module>vuetify</module>
        </depends>
        <depends>
            <module>eXoVueI18n</module>
        </depends>
        <depends>
            <module>jquery</module>
            <as>$</as>
        </depends>
        <depends>
            <module>jquery-touch</module>
            <as>jqueryTouch</as>
        </depends>
        <depends>
            <module>chatCometD</module>
            <as>cCometD</as>
        </depends>
        <depends>
            <module>suggester</module>
        </depends>
        <depends>
            <module>iphoneStyleCheckbox</module>
        </depends>
        <depends>
            <module>filedrop</module>
        </depends>
        <depends>
            <module>bts_tooltip</module>
        </depends>
        <depends>
            <module>fetchPolyfill</module>
        </depends>
        <depends>
            <module>customEventPolyfill</module>
        </depends>
        <depends>
            <module>iePolyfills</module>
        </depends>
        <depends>
            <module>extensionRegistry</module>
        </depends>
        <depends>
            <module>commonVueComponents</module>
        </depends>
    </module>

    <module>
        <name>chatCometD</name>
        <as>cCometD</as>
        <script>
            <path>/js/lib/chatCometd3.js</path>
        </script>
        <depends>
            <module>jquery</module>
        </depends>
        <depends>
            <module>jquery_cometd</module>
        </depends>
    </module>

    <module>
        <name>chatButtonBundle</name>
        <script>
            <minify>false</minify>
            <path>/js/chatButton.bundle.js</path>
        </script>
        <depends>
            <module>vue</module>
        </depends>
        <depends>
            <module>vuetify</module>
        </depends>
        <depends>
            <module>eXoVueI18n</module>
        </depends>
        <depends>
            <module>jquery</module>
            <as>$</as>
        </depends>
        <depends>
            <module>jquery-touch</module>
            <as>jqueryTouch</as>
        </depends>
        <depends>
            <module>chatCometD</module>
            <as>cCometD</as>
        </depends>
        <depends>
            <module>extensionRegistry</module>
        </depends>
        <depends>
            <module>commonVueComponents</module>
        </depends>
    </module>
</gatein-resources>
