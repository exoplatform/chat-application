<?xml version="1.0" encoding="UTF-8"?>
<portlet-app xmlns="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd"
             version="2.0"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd
   http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd">

   <portlet>
     <portlet-name>ChatApplication</portlet-name>
     <display-name xml:lang="EN">Chat Application</display-name>
     <portlet-class>org.exoplatform.commons.api.portlet.GenericDispatchedViewPortlet</portlet-class>
     <init-param>
      <name>portlet-view-dispatched-file-path</name>
      <value>/index.html</value>
     </init-param>
     <init-param>
       <name>preload.resource.bundles</name>
       <value>locale.portlet.chat.Resource</value>
     </init-param>
     <init-param>
       <name>preload.resource.rest</name>
       <value><![CDATA[/portal/rest/chat/api/1.0/user/settings]]></value>
     </init-param>
     <expiration-cache>-1</expiration-cache>
     <cache-scope>PUBLIC</cache-scope>
     <supports>
       <mime-type>text/html</mime-type>
     </supports>
     <supported-locale>en</supported-locale>
     <portlet-info>
       <title>Chat Application</title>
       <keywords>Chat</keywords>
     </portlet-info>
   </portlet>

   <portlet>
     <portlet-name>ChatNotificationApplication</portlet-name>
     <display-name xml:lang="EN">Mini Chat Application</display-name>
     <portlet-class>org.exoplatform.commons.api.portlet.GenericDispatchedViewPortlet</portlet-class>
     <init-param>
      <name>portlet-view-dispatched-file-path</name>
      <value>/index-mini-chat.html</value>
     </init-param>
     <init-param>
       <name>preload.resource.bundles</name>
       <value>locale.portlet.chat.Resource</value>
     </init-param>
     <init-param>
       <name>preload.resource.rest</name>
       <value><![CDATA[/portal/rest/chat/api/1.0/user/settings]]></value>
     </init-param>
     <expiration-cache>-1</expiration-cache>
     <cache-scope>PUBLIC</cache-scope>
     <supports>
       <mime-type>text/html</mime-type>
     </supports>
     <supported-locale>en</supported-locale>
     <portlet-info>
       <title>Mini Chat Application</title>
       <keywords>Chat</keywords>
     </portlet-info>
   </portlet>
   <portlet>
     <portlet-name>ChatButtonApplication</portlet-name>
     <display-name xml:lang="EN">Chat button Application</display-name>
     <portlet-class>org.exoplatform.commons.api.portlet.GenericDispatchedViewPortlet</portlet-class>
     <init-param>
      <name>portlet-view-dispatched-file-path</name>
      <value>/index-chat-button.html</value>
     </init-param>
     <init-param>
       <name>preload.resource.bundles</name>
       <value>locale.portlet.chat.Resource</value>
     </init-param>
     <expiration-cache>-1</expiration-cache>
     <cache-scope>PUBLIC</cache-scope>
     <supports>
       <mime-type>text/html</mime-type>
     </supports>
     <supported-locale>en</supported-locale>
     <portlet-info>
       <title>Chat button Application</title>
       <keywords>ChatButton</keywords>
     </portlet-info>
   </portlet>

</portlet-app>