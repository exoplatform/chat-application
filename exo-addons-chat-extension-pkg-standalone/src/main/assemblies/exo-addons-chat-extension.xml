<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2" 
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
  <id>exo-addons-chat-extension</id>
  <formats>
    <format>zip</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>
  <files>
    <file>
      <source>target/exo-addons-chat-application-${project.version}.zip</source>
      <outputDirectory>/exo-addons-chat-extension</outputDirectory>
    </file>
    <file>
      <source>target/exo-addons-chat-server-${project.version}.zip</source>
      <outputDirectory>/exo-addons-chat-extension</outputDirectory>
    </file>
  </files>
  <fileSets>
    <fileSet>
      <directory>../data/</directory>
      <outputDirectory>/exo-addons-chat-extension</outputDirectory>
      <includes>
        <include>chat-sample.properties</include>
      </includes>
    </fileSet>
   </fileSets>
</assembly>
